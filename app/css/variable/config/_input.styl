// === Inputs ===
.input,.textarea,.select
	padding 15px 0
	border 0
	border-bottom 1px solid $border-color
	resize: none
	outline: 0 !important
	font-family $v-font
	display block!important
	placeholder(#888888)
	tr(all)
	color black
	width: 100%
	&:focus
		background: white

.style-label
	display flex
	position relative
	align-items flex-start

.style-label--disable
	@extend .disabled

.check-el
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		cp()
		tr(all)
		size 30px
		position relative
		display inline-block
		margin-right 15px
		background white
		border 2px solid $border-color
		&:hover
			border 2px solid $mark
	.icon-check
		display none
	.sytle-input
		&:checked ~ .sytle-input-element
			flex(mid)
			border 2px solid $mark
			.icon-check
				display block
				fill $mark
				size 16px

.style-label--radio
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		size 30px
		position relative
		display inline-block
		margin-right 15px
		background white
		border 2px solid $border-color
		round()
		cp()
	.icon-check
		display none
	.sytle-input
		&:checked ~ .sytle-input-element
			flex(mid)

			color white
			background: white
			.icon-radio
				round()
				size 16px
				background $mark

.sytle-input-text
	color black
	width: calc(100% - 80px)
	line-height: 1.6
	margin-top: 2px
	a
		color $mark



.input-row__title
	margin-bottom: 5px
	font-weight: 700

.input-row
	margin-bottom: 20px
	.input
		width: 100%
	.nice-select
		width: 100%

.input-row--error
	.input
		border-color $red
		color $red
	.error-msg
		display block

.error-msg
	color $red
	margin: 10px 0
	display none
.agree-row
	f()
	align-items: center
	margin:10px 0 20px 0
	a
		text-decoration: underline
		display: inline-block

.agree-row__text
	width: 100%
	color black
	font-size: 12px
	a
		color #9c9a9a
		text-decoration: none

.input-cont
	display: grid
	grid-gap 20px
	margin-bottom: 20px

.input-cont--clear
	margin-bottom: 0
.input-cont--two
	grid-template-columns: 1fr 1fr
	+below(640px)
		grid-template-columns: 1fr

.input-cont--three
	grid-template-columns: 1fr 1fr 1fr
	+below(640px)
		grid-template-columns: 1fr

.input-cont--four
	grid-template-columns: repeat(4,1fr)
	+below(640px)
		grid-template-columns: 1fr
